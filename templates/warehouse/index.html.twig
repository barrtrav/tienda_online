{% extends 'base.html.twig' %}

{% block title %}Warehouse index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .warehouse-index-container {
            
            margin: 0 auto;
            padding: 20px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .warehouse-index-container h1 {
            font-size: 24px;
            margin-bottom: 20px;
            text-align: center;
        }
        .warehouse-index-container table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        .warehouse-index-container th, .warehouse-index-container td {
            padding: 10px;
            border: 1px solid #ddd;
        }
        .warehouse-index-container th {
            background-color: #f9f9f9;
            text-align: left;
        }
        .warehouse-index-container a {
            display: inline-block;
            margin: 5px 10px;
            padding: 10px 20px;
            background-color: #00796b;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }
        .warehouse-index-container a:hover {
            background-color: #004d40;
        }
    </style>
{% endblock %}

{% block body %}
<div class="warehouse-index-container">
    <h1>Warehouse index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreationDate</th>
                <th>Name</th>
                <th>Code</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Active</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for warehouse in warehouses %}
            <tr>
                <td>{{ warehouse.id }}</td>
                <td>{{ warehouse.creationDate ? warehouse.creationDate|date('Y-m-d') : '' }}</td>
                <td>{{ warehouse.name }}</td>
                <td>{{ warehouse.code }}</td>
                <td>{{ warehouse.phone }}</td>
                <td>{{ warehouse.address }}</td>
                <td>{{ warehouse.active ? 'Yes' : 'No' }}</td>
                <td>{{ warehouse.latitude }}</td>
                <td>{{ warehouse.longitude }}</td>
                <td>
                    <a href="{{ path('app_warehouse_show', {'id': warehouse.id}) }}">show</a>
                    <a href="{{ path('app_warehouse_edit', {'id': warehouse.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_warehouse_new') }}">Create new</a>
</div>
{% endblock %}
