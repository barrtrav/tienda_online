{% extends 'base.html.twig' %}

{% block title %}BagReception{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .bag-reception-container {
            
            margin: 0 auto;
            padding: 20px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .bag-reception-container h1 {
            font-size: 24px;
            margin-bottom: 20px;
            text-align: center;
        }
        .bag-reception-container table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        .bag-reception-container th, .bag-reception-container td {
            padding: 10px;
            border: 1px solid #ddd;
        }
        .bag-reception-container th {
            background-color: #f9f9f9;
            text-align: left;
        }
        .bag-reception-container a {
            display: inline-block;
            margin: 10px 5px;
            padding: 10px 20px;
            background-color: #00796b;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }
        .bag-reception-container a:hover {
            background-color: #004d40;
        }
        .bag-reception-container .btn {
            background-color: #d32f2f;
        }
        .bag-reception-container .btn:hover {
            background-color: #b71c1c;
        }
    </style>
{% endblock %}

{% block body %}
<div class="bag-reception-container">
    <h1>BagReception</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bag_reception.id }}</td>
            </tr>
            <tr>
                <th>BagCode</th>
                <td>{{ bag_reception.bagCode }}</td>
            </tr>
            <tr>
                <th>ReceptionDate</th>
                <td>{{ bag_reception.receptionDate ? bag_reception.receptionDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Responsable</th>
                <td>{{ bag_reception.responsable }}</td>
            </tr>
            <tr>
                <th>QrCode</th>
                <td>{{ bag_reception.qrCode }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_bag_reception_index') }}">back to list</a>
    <a href="{{ path('app_bag_reception_edit', {'id': bag_reception.id}) }}">edit</a>

    <div class="form-container">
        {{ include('bag_reception/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
