{# templates/cart/shipping_confirmation.html.twig #}

{% block body %}
<style>
    .shipping-confirmation-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }
    .shipping-confirmation-container h1 {
        font-size: 24px;
        margin-bottom: 20px;
    }
    .shipping-confirmation-container p {
        font-size: 18px;
        color: #555;
        margin: 10px 0;
    }
    .shipping-confirmation-container a {
        display: inline-block;
        margin: 20px 10px 0;
        padding: 10px 20px;
        background-color: #00796b;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s;
    }
    .shipping-confirmation-container a:hover {
        background-color: #004d40;
    }
</style>

<div class="shipping-confirmation-container">
    <h1>Confirmación de Envío</h1>
    <p>{{ message }}</p>
    <p>Correo electrónico del cliente: {{ order.user.email }}</p>
    <a href="{{ path('app_home') }}" id="back-home">Volver al Inicio</a>
</div>

<script>
    // Eliminar el carrito de compras del almacenamiento local
    localStorage.removeItem('cart');

    // Otras acciones que desees realizar
    document.getElementById('back-home').addEventListener('click', function() {
        alert('El carrito de compras ha sido eliminado.');
    });
</script>
{% endblock %}
