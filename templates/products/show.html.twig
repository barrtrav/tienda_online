{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .product-container {
            
            margin: 0 auto;
            padding: 20px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .product-container h1 {
            font-size: 24px;
            margin-bottom: 20px;
            text-align: center;
        }
        .product-container table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        .product-container th, .product-container td {
            padding: 10px;
            border: 1px solid #ddd;
        }
        .product-container th {
            background-color: #f9f9f9;
            text-align: left;
        }
        .product-container a {
            display: inline-block;
            margin: 10px 5px;
            padding: 10px 20px;
            background-color: #00796b;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }
        .product-container a:hover {
            background-color: #004d40;
        }
        .product-container .btn {
            background-color: #d32f2f;
        }
        .product-container .btn:hover {
            background-color: #b71c1c;
        }
    </style>
{% endblock %}

{% block body %}
<div class="product-container">
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ product.code }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ product.creationDate ? product.creationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>NameTranslate</th>
                <td>{{ product.nameTranslate }}</td>
            </tr>
            <tr>
                <th>Wight</th>
                <td>{{ product.wight }}</td>
            </tr>
            <tr>
                <th>Volume</th>
                <td>{{ product.volume }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ product.brand }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Temperature</th>
                <td>{{ product.temperature }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.Price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_products_index') }}">back to list</a>
    <a href="{{ path('app_products_edit', {'id': product.id}) }}">edit</a>

    <div class="form-container">
        {{ include('products/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
