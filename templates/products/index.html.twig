{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .product-index-container {
            
            margin: 0 auto;
            padding: 20px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .product-index-container h1 {
            font-size: 24px;
            margin-bottom: 20px;
            text-align: center;
        }
        .product-index-container table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        .product-index-container th, .product-index-container td {
            padding: 10px;
            border: 1px solid #ddd;
        }
        .product-index-container th {
            background-color: #f9f9f9;
            text-align: left;
        }
        .product-index-container a {
            display: inline-block;
            margin: 5px 10px;
            padding: 10px 20px;
            background-color: #00796b;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }
        .product-index-container a:hover {
            background-color: #004d40;
        }
    </style>
{% endblock %}

{% block body %}
<div class="product-index-container">
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>CreationDate</th>
                <th>Name</th>
                <th>NameTranslate</th>
                <th>Wight</th>
                <th>Volume</th>
                <th>Brand</th>
                <th>Description</th>
                <th>Temperature</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.code }}</td>
                <td>{{ product.creationDate ? product.creationDate|date('Y-m-d') : '' }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.nameTranslate }}</td>
                <td>{{ product.wight }}</td>
                <td>{{ product.volume }}</td>
                <td>{{ product.brand }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.temperature }}</td>
                <td>{{ product.Price }}</td>
                <td>
                    <a href="{{ path('app_products_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('app_products_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_products_new') }}">Create new</a>
</div>
{% endblock %}
