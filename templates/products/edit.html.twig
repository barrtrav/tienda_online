{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .edit-product-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        .edit-product-container h1 {
            font-size: 24px;
            margin-bottom: 20px;
        }
        .edit-product-container a {
            display: inline-block;
            margin: 10px 5px;
            padding: 10px 20px;
            background-color: #00796b;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }
        .edit-product-container a:hover {
            background-color: #004d40;
        }
        .edit-product-container .btn {
            background-color: #d32f2f;
        }
        .edit-product-container .btn:hover {
            background-color: #b71c1c;
        }
    </style>
{% endblock %}

{% block body %}
<div class="edit-product-container">
    <h1>Edit Product</h1>

    {{ include('products/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('app_products_index') }}">back to list</a>

    <div class="form-container">
        {{ include('products/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
