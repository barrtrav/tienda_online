{% extends 'base.html.twig' %}

{% block title %}Recepción de Bolsas{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .receive-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .receive-container h1 {
            font-size: 24px;
            margin-bottom: 20px;
        }
        .receive-container form {
            display: flex;
            flex-direction: column;
        }
        .receive-container input, .receive-container select {
            margin-bottom: 10px;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 16px;
        }
        .receive-container button {
            background-color: #00796b;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px;
            font-size: 16px;
            cursor: pointer;
        }
        .receive-container button:hover {
            background-color: #004d40;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="receive-container">
        <h1>Recepción de Bolsas</h1>
        <form method="post" action="{{ path('distribution_receive') }}">
            <input type="text" name="bag_code" placeholder="Código de Bolsa" required>
            <select name="distribution_center_id" required>
                <option value="">Seleccione el Centro de Distribución</option>
                {% for center in distribution_centers %}
                    <option value="{{ center.id }}">{{ center.name }}</option>
                {% endfor %}
            </select>
            <button type="submit">Registrar Recepción</button>
        </form>
    </div>
{% endblock %}
