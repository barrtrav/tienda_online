{% extends 'base.html.twig' %}

{% block title %}DistributionCenter{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .distribution-center-container {
            
            margin: 0 auto;
            padding: 20px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .distribution-center-container h1 {
            font-size: 24px;
            margin-bottom: 20px;
            text-align: center;
        }
        .distribution-center-container table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        .distribution-center-container th, .distribution-center-container td {
            padding: 10px;
            border: 1px solid #ddd;
        }
        .distribution-center-container th {
            background-color: #f9f9f9;
            text-align: left;
        }
        .distribution-center-container a {
            display: inline-block;
            margin: 10px 5px;
            padding: 10px 20px;
            background-color: #00796b;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }
        .distribution-center-container a:hover {
            background-color: #004d40;
        }
        .distribution-center-container .btn {
            background-color: #d32f2f;
        }
        .distribution-center-container .btn:hover {
            background-color: #b71c1c;
        }
    </style>
{% endblock %}

{% block body %}
<div class="distribution-center-container">
    <h1>DistributionCenter</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ distribution_center.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ distribution_center.name }}</td>
            </tr>
            <tr>
                <th>Responsable</th>
                <td>{{ distribution_center.responsable }}</td>
            </tr>
            <tr>
                <th>BagsDelivered</th>
                <td>{{ distribution_center.bagsDelivered }}</td>
            </tr>
            <tr>
                <th>DeliveryDate</th>
                <td>{{ distribution_center.deliveryDate ? distribution_center.deliveryDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_distribution_center_index') }}">back to list</a>
    <a href="{{ path('app_distribution_center_edit', {'id': distribution_center.id}) }}">edit</a>

    <div class="form-container">
        {{ include('distribution_center/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
