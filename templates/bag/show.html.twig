{% extends 'base.html.twig' %}

{% block title %}Bag{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .bag-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .bag-container h1 {
            font-size: 24px;
            margin-bottom: 20px;
        }
        .bag-container table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        .bag-container th, .bag-container td {
            padding: 10px;
            border: 1px solid #ddd;
        }
        .bag-container th {
            background-color: #f9f9f9;
            text-align: left;
        }
        .bag-container a {
            display: inline-block;
            margin: 5px 10px;
            padding: 10px 20px;
            background-color: #00796b;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }
        .bag-container a:hover {
            background-color: #004d40;
        }
        .bag-container .btn {
            background-color: #d32f2f;
        }
        .bag-container .btn:hover {
            background-color: #b71c1c;
        }
    </style>
{% endblock %}

{% block body %}
<div class="bag-container">
    <h1>Bag</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bag.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ bag.code }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ bag.creationDate ? bag.creationDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_bag_index') }}">back to list</a>

    <a href="{{ path('app_bag_edit', {'id': bag.id}) }}">edit</a>

    <div class="form-container">
        {{ include('bag/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
