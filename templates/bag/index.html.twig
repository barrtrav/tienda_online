{% extends 'base.html.twig' %}

{% block title %}Bag index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .bag-index-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .bag-index-container h1 {
            font-size: 24px;
            margin-bottom: 20px;
            text-align: center;
        }
        .bag-index-container table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        .bag-index-container th, .bag-index-container td {
            padding: 10px;
            border: 1px solid #ddd;
        }
        .bag-index-container th {
            background-color: #f9f9f9;
            text-align: left;
        }
        .bag-index-container a {
            display: inline-block;
            margin: 5px 10px;
            padding: 10px 20px;
            background-color: #00796b;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }
        .bag-index-container a:hover {
            background-color: #004d40;
        }
    </style>
{% endblock %}

{% block body %}
<div class="bag-index-container">
    <h1>Bag index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>CreationDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bag in bags %}
            <tr>
                <td>{{ bag.id }}</td>
                <td>{{ bag.code }}</td>
                <td>{{ bag.creationDate ? bag.creationDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_bag_show', {'id': bag.id}) }}">show</a>
                    <a href="{{ path('app_bag_edit', {'id': bag.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_bag_new') }}">Create new</a>
</div>
{% endblock %}
