{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <h1>Order</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>PurchasDate</th>
                <td>{{ order.purchasDate ? order.purchasDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ApprovalDate</th>
                <td>{{ order.approvalDate ? order.approvalDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Province</th>
                <td>{{ order.province }}</td>
            </tr>
            <tr>
                <th>Municipality</th>
                <td>{{ order.municipality }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ order.address }}</td>
            </tr>
            <tr>
                <th>TotalItems</th>
                <td>{{ order.totalItems }}</td>
            </tr>
            <tr>
                <th>TotalAmount</th>
                <td>{{ order.totalAmount }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_order_index') }}">back to list</a>

    <a href="{{ path('app_order_edit', {'id': order.id}) }}">edit</a>

    {{ include('order/_delete_form.html.twig') }}
{% endblock %}
