{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .register-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 90vh;
            background-color: #e0f7fa;
        }
        .register-form {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
            display: flex;
            flex-direction: column;
            align-items: stretch;
        }
        .register-form h1 {
            margin-bottom: 20px;
            font-size: 24px;
            text-align: center;
            color: #00796b;
        }
        .register-form .form-group {
            margin-bottom: 15px;
        }
        .register-form .form-group label {
            color: #00796b;
        }
        .register-form .form-control {
            margin:5px;
            border-radius: 5px;
            border: 1px solid #00796b;
        }
        .register-form .btn {
            width: 100%;
            background-color: #00796b;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px;
            font-size: 16px;
        }
        .register-form .btn:hover {
            background-color: #004d40;
        }
    </style>
{% endblock %}

{% block body %}
<div class="register-container">
    <form method="post" class="register-form">
        <h1 class="h3 mb-3 font-weight-normal">Register</h1>

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.firstName, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.lastName, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.address, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.phoneNumber, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.plainPassword, {
                'label': 'Password',
                'attr': {'class': 'form-control'}
            }) }}
            {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-control'}}) }}

            <button type="submit" class="btn btn-lg btn-primary">Register</button>
        {{ form_end(registrationForm) }}
    </form>
</div>
{% endblock %}
